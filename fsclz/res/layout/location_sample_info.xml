<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sample_info_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/rel_authority"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_text_bg" >
        
        <RelativeLayout
            android:id="@+id/gentiao1" 
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#999999"/>

        <TextView
            android:id="@+id/txt_authority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gentiao1"
            android:layout_centerVertical="true"
            android:text="点击选择权限"
            android:textColor="#999999"
            android:textSize="16sp" />
        
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:layout_toRightOf="@id/txt_authority"
            android:layout_centerVertical="true"
            android:background="#999999"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rel_detection_object"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_text_bg" >
        
        <RelativeLayout
            android:id="@+id/gentiao1" 
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#999999"/>

        <TextView
            android:id="@+id/txt_detection_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gentiao1"
            android:layout_centerVertical="true"
            android:text="点击选择检测对象"
            android:textColor="#999999"
            android:textSize="16sp" />
        
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:layout_toRightOf="@id/txt_detection_object"
            android:layout_centerVertical="true"
            android:background="#999999"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rel_sample_object"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_text_bg" >
        
        <RelativeLayout
            android:id="@+id/gentiao1" 
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#999999"/>

        <TextView
            android:id="@+id/txt_sample_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gentiao1"
            android:layout_centerVertical="true"
            android:text="点击选择检测样本"
            android:textColor="#999999"
            android:textSize="16sp" />
        
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:layout_toRightOf="@id/txt_sample_object"
            android:layout_centerVertical="true"
            android:background="#999999"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_SampleTxt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_text_bg" >

        <TextView
            android:id="@+id/txt_sample_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="样本名称"
            android:textColor="#999999"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/pic_gentao"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/txt_sample_name"
            android:background="#999999" />

        <com.zrodo.fsclz.widget.ClearEditText
            android:id="@+id/pic_sample_name"
            style="@style/picSampleTxtStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/pic_gentao"
            android:background="@null"
            android:drawableRight="@drawable/delete_selector"
            android:gravity="center"
            android:singleLine="true" />
    </RelativeLayout>

