<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="160dp"
        android:layout_height="fill_parent"
        android:background="#e6e6e6" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rel_menu_N"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:clickable="true"
                    android:text="农产品"
                    android:textColor="#999999"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/menu1_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/arrow_open_proinfo" />
                
            </RelativeLayout>
              
            <RelativeLayout
               android:id="@+id/rel_menu_n_date" 
               android:layout_height="wrap_content"
               android:layout_marginTop="1dp"
               android:layout_width="160dp"
               android:visibility="gone">
                
                <include layout="@layout/layout_date_menu_by_n"/>
                
            </RelativeLayout>
          
            

            <RelativeLayout
                android:id="@+id/rel_menu_S"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:clickable="true"
                    android:text="水产品"
                    android:textColor="#999999"
                    android:textSize="20sp" />
                
                <ImageView
                    android:id="@+id/menu2_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/arrow_open_proinfo" />
                
            </RelativeLayout>
            
            <RelativeLayout
               android:id="@+id/rel_menu_s_date" 
               android:layout_height="wrap_content"
               android:layout_width="160dp"
               android:layout_marginTop="1dp"
               android:visibility="gone">
                
                <include layout="@layout/layout_date_menu_by_s"/>
                
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_menu_X"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:clickable="true"
                    android:text="畜产品"
                    android:textColor="#999999"
                    android:textSize="20sp" />
                
                <ImageView
                    android:id="@+id/menu3_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/arrow_open_proinfo" />
                
            </RelativeLayout>
            
            <RelativeLayout
               android:id="@+id/rel_menu_x_date" 
               android:layout_height="wrap_content"
               android:layout_marginTop="1dp"
               android:layout_width="160dp"
               android:visibility="gone">
                
                <include layout="@layout/layout_date_menu_by_x"/>
                
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>