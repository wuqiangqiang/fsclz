<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/txt_day_chart_by_S"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="日报表"
        android:textColor="#999999"
        android:textSize="18sp" />

    <View
        android:id="@+id/txt_gentiao1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txt_day_chart_by_S"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/txt_month_chart_by_S"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_gentiao1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="月报表"
        android:textColor="#999999"
        android:textSize="18sp" />

    <View
        android:id="@+id/txt_gentiao2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txt_month_chart_by_S"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/txt_zdyi_chart_by_S"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_gentiao2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="自定义报表"
        android:textColor="#999999"
        android:textSize="18sp" />

</RelativeLayout>